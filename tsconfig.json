{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": false,
    "newLine": "lf",
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./cache",
    "./dist"
  ]
}
